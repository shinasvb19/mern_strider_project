<% layout('/layouts/boilerplate') %>
<section class="shop spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3">
                <div class="shop__sidebar">
                    <div class="sidebar__categories">
                        <div class="section-title">
                            <h4>Categories</h4>
                        </div>
                        <div class="categories__accordion">
                            <div class="accordion" id="accordionExample">
                                <div class="card">
                                    <div class="card-heading active">
                                        <a href="/women">Women</a>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-heading">
                                        <a href="/men">Men</a>
                                    </div>
                                    
                                </div>
                                <div class="card">
                                    <div class="card-heading">
                                        <a href="/kids">Kids</a>
                                    </div>
                                   
                                </div>
                            </div>
                        </div>
                    </div>
                   
                    
                    
                </div>
            </div>
            <div class="col-lg-9 col-md-9">
                <div class="row">
                    <% product.forEach(value=>{ %>
                     
                    <div class="col-lg-4 col-md-6">
                        <div class="product__item">
                            <div class="product__item__pic set-bg" data-setbg="<%=value.image[0].url%>">
                                <ul class="product__hover">
                                    <li><a href="img/shop/shop-2.jpg" class="image-popup"><span class="arrow_expand"></span></a></li>
                                    <li><a><button style="background: none;
                                        color: inherit;
                                        border: none;
                                        padding: 0;
                                        font: inherit;
                                        cursor: pointer;
                                        outline: inherit; border:none;" onclick="invoke('<%=value.id%>')"><span class="icon_heart_alt"></button></span></a></li>
                                    <input type="text" id="proId" value="<%=value.id%>" hidden>
                                    <li><a href="/details/<%=value.id%>"><span class="icon_bag_alt"></span></a></li>
                                </ul>
                            </div>
                            <div class="product__item__text">
                                <h6><a href="/details/<%=value.id%>"><%=value.product_name%></a></h6>
                               
                                <div class="product__price">â‚¹  <%=value.price%></div>
                            </div>
                        </div>
                    </div>
                   <% }) %> 
                    </div>
                </div>
            </div>
        </div>
    
</section>
