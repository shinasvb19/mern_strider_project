    <script>
        function changeQuantity(cartId, proId,size, count) {
            $.ajax({
                url: '/cart/change-product-qt',
                data: {
                    cart: cartId,
                    product: proId,
                    size:size,
                    count: count
                },
                method: 'post',
                success: location.reload()
            })
        }

        function removeProduct(proId) {
            $.ajax({
                url: '/cart/cartItemDelete',
                data: {
                    product: proId,
                },
                method: 'post',
                success:  location.reload()
            })
        }

    </script>